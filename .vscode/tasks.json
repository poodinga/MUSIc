{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "SDL2",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"-g",
				"src\\*.cpp",
				"include\\headers\\*.cpp",
				"-o",
				"Main.exe",
				"-Iinclude/",
				"-Llib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"lSDL2_image",
				"lSDL2_mixer"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\msys64\\mingw64\\bin\\g++.exe"
		},
		{
			"type": "cppbuild",
			"label": "C/C++: cpp.exe build active file",
			"command": "C:\\msys64\\mingw64\\bin\\cpp.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${file}",
				"-o",
				"${fileDirname}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: C:\\msys64\\mingw64\\bin\\cpp.exe"
		}
	]
